@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
    <section id="content">
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d96283.93750970959!2d28.59118499016222!3d41.04990525947191!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b558b1fceb5dad%3A0x614634ee1252675e!2sEsenyurt%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1578310533783!5m2!1str!2str" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h4>Formu Doldurarak <strong>İletişime Geçebilirsiniz.</strong></h4>

                    <div class="alert alert-info"  id="sendmessage">@ViewBag.uyari</div>
                    <div id="errormessage"></div>
                    <form action="/Home/Iletisim" method="post" role="form" class="contactForm">
                        <div class="form-group">
                            <input type="text" name="adsoyad" class="form-control" id="name" placeholder="İsminiz" data-rule="minlen:4" data-msg="Lütfen en az 4 karekter giriniz" />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" data-rule="email" required />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" required />
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="mesaj" rows="5" data-rule="required" placeholder="Mesajınız"></textarea>
                            <div class="validation"></div>
                        </div>

                        <div class="text-center"><button type="submit" class="btn btn-theme">Gönder</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section>
