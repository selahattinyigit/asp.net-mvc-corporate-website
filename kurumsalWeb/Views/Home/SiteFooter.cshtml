
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Kişisel Web Sitesi</h5>
                    <address>
                        <strong> @ViewBag.iletisim.adres</strong><br>
                        
                    </address>
                    <p>
                        <i class="icon-phone"></i> @ViewBag.iletisim.telefon <br>
                        <i class="icon-envelope-alt"></i> @ViewBag.iletisim.Fax
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="/Home/Index/">Ana Sayfa</a></li>
                        <li><a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                        <li><a href="/Home/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                        <li><a href="/Home/Blog/">Blog</a></li>
                        <li><a href="/Home/Iletisim/">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Blog Yazıları</h5>
                    <ul class="link-list">
                        @foreach (var item in ViewBag.blog)
                        {
                            <li><a href="/Home/BlogDetay/@item.blogId/">@item.baslik</a></li>

                        }

                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in ViewBag.hizmet)
                        {
                            <img src="~/@item.resimUrl" width="75" height="30" />

                        }
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
