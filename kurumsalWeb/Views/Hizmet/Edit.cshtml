@model kurumsalWeb.Models.tbHizmet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Düzenle</h2>
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>
<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Edit/@Model.hizmetId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="baslik" name="baslik" minlength="5" type="text" required value="@Model.baslik" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="aciklama" class="ckeditor" required>@Model.aciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <img src="~/@Model.resimUrl" width="150"height="150" />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control " type="file" name="resimUrl" accept=".png,.jpg,.jpeg" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Hizmet/Index/">iptal</a></button>
            </div>
        </div>
    </form>
</div>

