@model IEnumerable<kurumsalWeb.Models.tbHizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>HİZMETLER</h2>
<a class="" href="/Hizmet/Create/">Yeni Ekle</a>
<table class="table table-condensed table-striped table-bordered table-responsive-sm">
    <thead>
        <tr>
            <th>İD</th>
            <th>BAŞLIK</th>
            <th>AÇIKLAMA</th>
            <th>LOGO</th>
            <th>İşlemler</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.hizmetId</td>
                <td>@item.baslik</td>
                <td>@Html.Raw(item.aciklama)</td>
                <td><img width="100" height="100" src="~/@item.resimUrl" class="img-responsive" /></td>
                <td><a href="/Hizmet/Edit/@item.hizmetId">Güncelle</a>|<a href="/Hizmet/Delete/@item.hizmetId">Sil</a></td>

            </tr>
        }


    </tbody>
</table>


